{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "src/main.c",
                "src/map.c",
                "src/enemy.c",
                "src/movement.c",
                "src/raycast.c",
                "src/sprites.c",
                "src/screen.c",
                "-Iinclude",
                "-Llib/Win64",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}